---
import siteConfig from '../../data/siteConfig.json';

const { booking, pricing } = siteConfig.sections;
const { business, site } = siteConfig.common;
---

<div
  id="booking-popup"
  class="fixed inset-0 z-50 hidden items-center justify-center backdrop-blur-sm bg-black/80 transition-all duration-300 opacity-0"
  role="dialog"
  aria-modal="true"
  aria-labelledby="booking-title"
>
  <button
    id="booking-close"
    class="fixed top-4 right-4 w-12 h-12 bg-slate-600/80 hover:bg-slate-700/90 text-white hover:text-stone-300 transition-colors z-20 flex items-center justify-center"
    aria-label="Close booking popup"
  >
    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"
      ></path>
    </svg>
  </button>

  <div class="relative w-full max-w-md mx-4">
    <div
      class="bg-white shadow-2xl overflow-hidden transform transition-transform duration-300 scale-95"
    >
      <div class="p-6">
        <h2
          id="booking-title"
          class="text-2xl font-bold text-slate-900 mb-6 font-heading text-center"
        >
          {booking.title}
        </h2>

        <form id="booking-form" class="space-y-4">
          <div>
            <label for="student-name" class="block text-sm font-medium text-slate-700 mb-2"
              >Your Name</label
            >
            <input
              type="text"
              id="student-name"
              name="name"
              class="w-full px-4 py-3 border border-stone-300 focus:border-amber-700 focus:ring-2 focus:ring-amber-700/20 transition-colors"
              placeholder="Enter your full name"
              required
            />
          </div>

          <div>
            <label for="lesson-date" class="block text-sm font-medium text-slate-700 mb-2"
              >Preferred Date</label
            >
            <input
              type="date"
              id="lesson-date"
              name="date"
              class="w-full px-4 py-3 border border-stone-300 focus:border-amber-700 focus:ring-2 focus:ring-amber-700/20 transition-colors"
              required
            />
          </div>

          <div>
            <label for="lesson-type" class="block text-sm font-medium text-slate-700 mb-2"
              >Lesson Type</label
            >
            <select
              id="lesson-type"
              name="type"
              class="w-full px-4 py-3 border border-stone-300 focus:border-amber-700 focus:ring-2 focus:ring-amber-700/20 transition-colors"
            >
              {
                pricing.packages.map((pkg) => (
                  <option value={pkg.value}>
                    {pkg.name} ({pkg.price}
                    {pkg.duration ? '/' + pkg.duration.replace('per ', '') : ''})
                  </option>
                ))
              }
            </select>
          </div>

          <div class="pt-4">
            <p class="text-sm font-medium text-slate-700 mb-4 text-center">{booking.subtitle}:</p>

            <div class="grid grid-cols-3 gap-3">
              <button
                type="button"
                id="contact-email"
                class="flex flex-col items-center p-4 border-2 border-stone-300 hover:border-amber-700 hover:bg-amber-50 transition-all duration-200 group cursor-pointer"
              >
                <svg
                  class="w-8 h-8 text-stone-600 group-hover:text-amber-700 mb-2"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                  ></path>
                </svg>
                <span class="text-xs font-medium text-stone-600 group-hover:text-amber-700"
                  >Email</span
                >
              </button>

              <button
                type="button"
                id="contact-sms"
                class="flex flex-col items-center p-4 border-2 border-stone-300 hover:border-amber-700 hover:bg-amber-50 transition-all duration-200 group cursor-pointer"
              >
                <svg
                  class="w-8 h-8 text-stone-600 group-hover:text-amber-700 mb-2"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"
                  ></path>
                </svg>
                <span class="text-xs font-medium text-stone-600 group-hover:text-amber-700"
                  >SMS</span
                >
              </button>

              <button
                type="button"
                id="contact-whatsapp"
                class="flex flex-col items-center p-4 border-2 border-stone-300 hover:border-amber-700 hover:bg-amber-50 transition-all duration-200 group cursor-pointer"
              >
                <svg
                  class="w-8 h-8 text-stone-600 group-hover:text-amber-700 mb-2"
                  fill="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893A11.821 11.821 0 0020.885 3.488"
                  ></path>
                </svg>
                <span class="text-xs font-medium text-stone-600 group-hover:text-amber-700"
                  >WhatsApp</span
                >
              </button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<script src={`${import.meta.env.BASE_URL}scripts/booking.js`} type="module" defer></script>
