---
import siteConfig from '../../data/siteConfig.json';

const { site, business, social } = siteConfig.common;
const currentYear = new Date().getFullYear();
const formattedAddress = business.address.replace(/\n/g, '<br>');
---

<footer
  class="bg-stone-300 dark:bg-slate-900 text-stone-700 dark:text-stone-300"
  role="contentinfo"
  aria-labelledby="footer-heading"
>
  <div class="max-w-7xl mx-auto px-6 py-12 md:px-12 md:py-16">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 md:gap-12">
      <section aria-labelledby="about-heading">
        <h2
          id="about-heading"
          class="text-2xl font-semibold text-stone-800 dark:text-stone-50 mb-4 font-heading"
        >
          {site.name}
        </h2>
        <p class="text-base leading-relaxed">
          {site.description}
        </p>
      </section>

      <div class="hidden md:block" aria-hidden="true"></div>

      <section aria-labelledby="contact-heading">
        <h3
          id="contact-heading"
          class="text-xl font-semibold text-stone-800 dark:text-stone-50 mb-4 font-heading"
        >
          Get in Touch
        </h3>
        <address class="space-y-3 not-italic">
          <div class="flex">
            <span
              class="text-stone-500 dark:text-stone-400 font-medium w-20 flex-shrink-0"
              id="phone-label">Phone:</span
            >
            <a
              href={`tel:${business.phone}`}
              class="hover:text-stone-900 dark:hover:text-stone-50 transition-colors flex-1 focus:outline-none focus:ring-2 focus:ring-stone-400 dark:focus:ring-stone-50 rounded"
              aria-labelledby="phone-label"
            >
              {business.phone}
            </a>
          </div>
          <div class="flex">
            <span
              class="text-stone-500 dark:text-stone-400 font-medium w-20 flex-shrink-0"
              id="email-label">Email:</span
            >
            <a
              href={`mailto:${business.email}`}
              class="hover:text-stone-900 dark:hover:text-stone-50 transition-colors flex-1 focus:outline-none focus:ring-2 focus:ring-stone-400 dark:focus:ring-stone-50 rounded"
              aria-labelledby="email-label"
            >
              {business.email}
            </a>
          </div>
          <div class="flex">
            <span
              class="text-stone-500 dark:text-stone-400 font-medium w-20 flex-shrink-0"
              id="address-label">Address:</span
            >
            <div class="flex-1" aria-labelledby="address-label" set:html={formattedAddress} />
          </div>
        </address>
      </section>
    </div>

    <hr
      class="border-stone-400 dark:border-stone-700 my-8"
      role="separator"
      aria-label="Footer content separator"
    />

    <div class="flex flex-col md:flex-row md:justify-between md:items-center gap-4">
      <p class="text-sm text-stone-600 dark:text-stone-300">
        &copy; {currentYear}
        {site.name}. All rights reserved.
      </p>

      <div class="flex space-x-4">
        <a
          href="https://facebook.com/rightschoolofmotoring"
          class="group w-10 h-10 border border-stone-300 hover:border-stone-400 flex items-center justify-center transition-colors"
          aria-label="Facebook"
          target="_blank"
        >
          <svg
            class="w-5 h-5 text-stone-300 group-hover:text-stone-400 transition-colors"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M18 2h-3a5 5 0 00-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 011-1h3z"></path>
          </svg>
        </a>
        <a
          href="https://instagram.com/rightschoolofmotoring"
          class="group w-10 h-10 border border-stone-300 hover:border-stone-400 flex items-center justify-center transition-colors"
          aria-label="Instagram"
          target="_blank"
        >
          <svg
            class="w-5 h-5 text-stone-300 group-hover:text-stone-400 transition-colors"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            viewBox="0 0 24 24"
          >
            <rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect>
            <path d="m16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path>
            <line x1="17.5" y1="6.5" x2="17.51" y2="6.5"></line>
          </svg>
        </a>
        <a
          href="https://twitter.com/rightschoolofmotoring"
          class="group w-10 h-10 border border-stone-300 hover:border-stone-400 flex items-center justify-center transition-colors"
          aria-label="X (Twitter)"
          target="_blank"
        >
          <svg
            class="w-5 h-5 text-stone-300 group-hover:text-stone-400 transition-colors"
            fill="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"
            ></path>
          </svg>
        </a>
      </div>
    </div>
  </div>
</footer>
