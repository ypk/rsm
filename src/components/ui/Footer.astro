---
import siteConfig from '../../data/siteConfig.json'
---

<footer class="bg-slate-900 text-stone-300">
  <div class="max-w-7xl mx-auto px-6 py-12 md:px-12 md:py-16">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 md:gap-12">
      
      <section aria-label="About us">
        <h2 class="text-2xl font-semibold text-stone-50 mb-4 font-heading">{siteConfig.common.site.name}</h2>
        <p class="text-base leading-relaxed">
          {siteConfig.common.site.description}
        </p>
      </section>

      <div class="hidden md:block"></div>

      <section aria-label="Contact information">
        <h3 class="text-xl font-semibold text-stone-50 mb-4 font-heading">Get in Touch</h3>
        <div class="space-y-3">
          <div class="flex">
            <span class="text-stone-400 font-medium w-20 flex-shrink-0">Phone:</span>
            <a href={`tel:${siteConfig.common.business.phone}`} class="hover:text-stone-50 transition-colors flex-1 focus:outline-none focus:ring-2 focus:ring-stone-50 rounded">
              {siteConfig.common.business.phone}
            </a>
          </div>
          <div class="flex">
            <span class="text-stone-400 font-medium w-20 flex-shrink-0">Email:</span>
            <a href={`mailto:${siteConfig.common.business.email}`} class="hover:text-stone-50 transition-colors flex-1 focus:outline-none focus:ring-2 focus:ring-stone-50 rounded">
              {siteConfig.common.business.email}
            </a>
          </div>
          <div class="flex">
            <span class="text-stone-400 font-medium w-20 flex-shrink-0">Address:</span>
            <address class="not-italic flex-1" set:html={siteConfig.common.business.address.replace(/\n/g, '<br>')}>
            </address>
          </div>
        </div>
      </section>
    </div>

    <hr class="border-stone-700 my-8">
    
    <div class="flex flex-col md:flex-row md:justify-between md:items-center gap-4">
      <p class="text-sm text-stone-400">&copy; {new Date().getFullYear()} {siteConfig.common.site.name}. All rights reserved.</p>
      
      <section aria-label="Social media">
        <div class="flex space-x-4">
          {siteConfig.common.social.map(social => (
          <a href={social.url} class="text-stone-400 hover:text-stone-50 transition-colors border-2 border-stone-600 hover:border-stone-400 p-2 focus:outline-none focus:ring-2 focus:ring-stone-50" aria-label={`Visit our ${social.network.charAt(0).toUpperCase() + social.network.slice(1)} page`} target="_blank" rel="noopener noreferrer">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" stroke-width="1" viewBox="0 0 24 24">
              {social.network === 'facebook' && (
                <path stroke-linecap="round" stroke-linejoin="round" d="M18 2h-3a5 5 0 00-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 011-1h3z"/>
              )}
              {social.network === 'instagram' && (
                <g>
                  <rect x="2" y="2" width="20" height="20" rx="5" ry="5"/>
                  <path d="m16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"/>
                  <line x1="17.5" y1="6.5" x2="17.51" y2="6.5"/>
                </g>
              )}
              {social.network === 'twitter' && (
                <path stroke-linecap="round" stroke-linejoin="round" d="M23 3a10.9 10.9 0 01-3.14 1.53 4.48 4.48 0 00-7.86 3v1A10.66 10.66 0 013 4s-4 9 5 13a11.64 11.64 0 01-7 2c9 5 20 0 20-11.5a4.5 4.5 0 00-.08-.83A7.72 7.72 0 0023 3z"/>
              )}
            </svg>
          </a>
          ))}
        </div>
      </section>
    </div>
  </div>
</footer>