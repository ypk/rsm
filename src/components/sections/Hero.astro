---
import siteConfig from '../../data/siteConfig.json';

const { hero } = siteConfig.sections;
const { business } = siteConfig.common;
---

<section
  class="hero bg-gradient-to-br from-slate-900 to-slate-800 min-h-[calc(100vh-120px)] lg:min-h-[calc(100vh-95px)]"
  aria-labelledby="hero-heading"
>
  <div
    class="hero-container grid grid-cols-1 lg:grid-cols-2 min-h-[calc(100vh-120px)] lg:min-h-[calc(100vh-95px)]"
  >
    <!-- Image Column (Mobile: on top, Desktop: right) -->
    <div
      class="hero-image relative aspect-[9/16] max-h-[74vh] h-auto order-1 w-full lg:aspect-auto lg:max-h-none lg:h-[calc(100vh-95px)] lg:order-2"
      data-hero-images='{JSON.stringify([
        { src: `${import.meta.env.BASE_URL}photos/lessons.jpeg`, class: "object-left" },
        { src: `${import.meta.env.BASE_URL}photos/vehicle.jpeg`, class: "object-center" },
        { src: `${import.meta.env.BASE_URL}photos/student.jpeg`, class: "object-right" }
      ])}'
    >
      <img
        src=""
        alt={`${business.instructor} - Professional Driving Instructor`}
        class="w-full h-full object-cover object-left lg:object-top"
        loading="eager"
      />
      <!-- Floating Badge -->
      {
        business.showQualification && (
          <div class="absolute bottom-8 right-5 bg-amber-700 text-white px-6 py-3 font-semibold shadow-lg transform rotate-3">
            <div class="text-lg">{business.qualification}</div>
            <div class="text-base">Since {business.established}</div>
          </div>
        )
      }
    </div>
    <!-- Content Column (Mobile: below, Desktop: left) -->
    <div
      class="hero-content flex items-center justify-center text-center lg:text-left px-6 md:px-12 py-12 lg:py-0 order-2 lg:order-1"
    >
      <div class="hero-text">
        <h1
          id="hero-heading"
          class="text-4xl md:text-5xl lg:text-6xl font-bold text-white mb-6 font-heading leading-tight"
        >
          {hero.title}
        </h1>
        <p class="text-xl md:text-2xl text-stone-300 mb-8 leading-relaxed">
          {hero.subtitle}
        </p>
        <!-- CTA Button -->
        <div class="mb-8">
          <button
            onclick="openBookingPopup()"
            class="btn-secondary text-xl px-8 py-4 inline-flex items-center gap-3"
          >
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2-2v14a2 2 0 002 2z"
              ></path>
            </svg>
            {hero.cta}
          </button>
        </div>
      </div>
    </div>
  </div>
</section>

<script src={`${import.meta.env.BASE_URL}scripts/hero.js`} type="module" defer></script>
