---
import siteConfig from '../../data/siteConfig.json'
---

<section class="bg-stone-300 py-20 md:py-36">
  <div class="max-w-7xl mx-auto px-6 md:px-12">
    
    <div class="text-center mb-12 md:mb-16">
      <h2 class="text-3xl md:text-4xl font-bold text-slate-900 mb-4 font-heading">
        {siteConfig.sections.testimonials.title}
      </h2>
      <p class="text-lg md:text-xl text-slate-700 max-w-3xl mx-auto">
        {siteConfig.sections.testimonials.subtitle}
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-12">
      {siteConfig.sections.testimonials.reviews.slice(0, 3).map(review => (
        <div class="text-center">
          
          <div class="bg-white border border-stone-200 p-6 relative mb-4">
            <blockquote class="text-slate-900 italic">
              "{review.quote}"
            </blockquote>
            
            <div class="absolute -bottom-4 left-0">
              <div style="width: 0; height: 0; border-right: 30px solid white; border-bottom: 30px solid transparent;"></div>
            </div>
          </div>
          
          <div class="flex items-center space-x-4 pl-6">
            <img 
              src={review.photo} 
              alt={`${review.name} profile photo`}
              class="w-16 h-16 rounded-full object-cover border-2 border-amber-700"
              loading="lazy"
            />
            <div class="text-left">
              <h4 class="font-semibold text-slate-900 font-heading">{review.name}</h4>
              <p class="text-sm text-stone-600">{review.title}</p>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>