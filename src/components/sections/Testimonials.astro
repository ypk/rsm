---
import siteConfig from '../../data/siteConfig.json'
---

<section class="bg-stone-300 py-20 md:py-36" aria-labelledby="testimonials-heading">
  <div class="max-w-7xl mx-auto px-6 md:px-12">
    
    <div class="text-center mb-12 md:mb-16">
      <h2 id="testimonials-heading" class="text-3xl md:text-4xl font-bold text-slate-900 mb-4 font-heading">
        {siteConfig.sections.testimonials.title}
      </h2>
      <p class="text-lg md:text-xl text-slate-700 max-w-3xl mx-auto">
        {siteConfig.sections.testimonials.subtitle}
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-12" role="list" aria-label="Customer testimonials">
      {siteConfig.sections.testimonials.reviews.slice(0, 3).map((review, index) => (
        <article class="text-center" role="listitem" aria-labelledby={`testimonial-${index + 1}-author`}>
          
          <div class="bg-white border border-stone-200 p-6 relative mb-4" role="complementary">
            <blockquote class="text-slate-900 italic" cite={`#testimonial-${index + 1}`}>
              <span class="sr-only">Quote from {review.name}:</span>
              "{review.quote}"
            </blockquote>
            
            <div class="absolute -bottom-4 left-0" aria-hidden="true">
              <div class="w-0 h-0 border-r-[30px] border-r-white border-b-[30px] border-b-transparent"></div>
            </div>
          </div>
          
          <div class="flex items-center space-x-4 pl-6">
            <img 
              src={review.photo} 
              alt={`Portrait of ${review.name}`}
              class="w-16 h-16 rounded-full object-cover border-2 border-amber-700"
              loading="lazy"
              role="img"
            />
            <div class="text-left">
              <h3 id={`testimonial-${index + 1}-author`} class="font-semibold text-slate-900 font-heading">{review.name}</h3>
              <p class="text-sm text-stone-600" role="note">{review.title}</p>
            </div>
          </div>
        </article>
      ))}
    </div>
  </div>
</section>