---
import siteConfig from '../../data/siteConfig.json'
---

<section class="bg-slate-900 py-20 md:py-36">
  <div class="max-w-7xl mx-auto px-6 md:px-12">
    
    <div class="text-center mb-12 md:mb-16">
      <h2 class="text-3xl md:text-4xl font-bold text-stone-50 mb-4 font-heading">
        {siteConfig.sections.whyChooseMe.title}
      </h2>
      <p class="text-lg md:text-xl text-stone-300 max-w-3xl mx-auto">
        {siteConfig.sections.whyChooseMe.subtitle}
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      {siteConfig.sections.whyChooseMe.usps.map(usp => {
        const getIcon = (iconType) => {
          switch(iconType) {
            case 'checkmark':
              return <path stroke-linecap="round" stroke-linejoin="round" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>;
            case 'clock':
              return <path stroke-linecap="round" stroke-linejoin="round" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>;
            case 'user':
              return <path stroke-linecap="round" stroke-linejoin="round" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>;
            case 'pound':
              return (
                <g>
                  <circle cx="32" cy="32" r="25.29"/>
                  <path d="M41.72,45.18H23.3a.14.14,0,0,1-.11-.23c1.26-1.35,7.28-8.25,5-14.46-2.57-6.92-.91-17.91,11.52-12.8" stroke-linecap="round"/>
                  <line x1="20.39" y1="30.67" x2="37.58" y2="30.67" stroke-linecap="round"/>
                </g>
              );
            default:
              return null;
          }
        };
        
        return (
          <div class="text-center bg-white/10 backdrop-blur-sm border border-white/20 px-8 py-10 md:p-6">
            <div class="w-16 h-16 bg-amber-700 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class={usp.icon === 'pound' ? 'w-10 h-10 text-white' : 'w-8 h-8 text-white'} fill="none" stroke="currentColor" stroke-width={usp.icon === 'pound' ? '2' : '1'} viewBox={usp.icon === 'pound' ? '0 0 64 64' : '0 0 24 24'}>
                {getIcon(usp.icon)}
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-stone-50 mb-4 font-heading">{usp.title}</h3>
            <p class="text-stone-300">
              {usp.description}
            </p>
          </div>
        );
      })}
    </div>
  </div>
</section>